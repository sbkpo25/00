from tkinter import *

def callback(a):
    print(a)
    lab.configure(text=a)

root=Tk()
root.geometry('200x200')

name=["Facebook","Apple","Amazon","Netflix","Google"]

for i in range(len(name)):
    but=Button(root,text=name[i],command=lambda i=i:callback(name[i]))
    but.grid(column=0,row=i)

lab=Label(root,height=10,width=10,bg="white")
lab.grid(column=1,row=0,rowspan=5,padx=5,pady=5)

root.mainloop()
